<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.pangu</groupId>
        <artifactId>pangu-iot</artifactId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>pangu-iot-test-driver</artifactId>

    <description>
        pangu-iot-manager管理模块
    </description>

    <dependencies>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- SpringCloud Alibaba Nacos -->
        <dependency>
            <groupId>com.alibaba.cloud</groupId>
            <artifactId>spring-cloud-starter-alibaba-nacos-discovery</artifactId>
        </dependency>

        <!-- SpringCloud Alibaba Nacos Config -->
        <dependency>
            <groupId>com.alibaba.cloud</groupId>
            <artifactId>spring-cloud-starter-alibaba-nacos-config</artifactId>
        </dependency>

        <!-- SpringBoot Actuator -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <dependency>
            <groupId>com.pangu</groupId>
            <artifactId>pangu-common-sentinel</artifactId>
        </dependency>

        <!-- PanGu Common Log -->
        <dependency>
            <groupId>com.pangu</groupId>
            <artifactId>pangu-common-log</artifactId>
        </dependency>

        <dependency>
            <groupId>com.pangu</groupId>
            <artifactId>pangu-common-dict</artifactId>
        </dependency>

        <dependency>
            <groupId>com.pangu</groupId>
            <artifactId>pangu-common-doc</artifactId>
        </dependency>

        <dependency>
            <groupId>com.pangu</groupId>
            <artifactId>pangu-common-web</artifactId>
        </dependency>

        <dependency>
            <groupId>com.pangu</groupId>
            <artifactId>pangu-common-dubbo</artifactId>
        </dependency>

        <dependency>
            <groupId>com.pangu</groupId>
            <artifactId>pangu-common-seata</artifactId>
        </dependency>

        <dependency>
            <groupId>com.pangu</groupId>
            <artifactId>pangu-api-manager</artifactId>
        </dependency>

        <dependency>
            <groupId>com.pangu</groupId>
            <artifactId>pangu-common-sdk</artifactId>
        </dependency>

    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
